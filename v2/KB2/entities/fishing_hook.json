{
  "format_version": "1.12.0",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:fishing_hook",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false
    },
    "component_groups": {
      "loot_jungle": {
        "minecraft:loot": {
          "table": "loot_tables/gameplay/jungle_fishing.json"
        }
      },
      "loot_saltwater": {
        "minecraft:loot": {
          "table": "loot_tables/gameplay/saltwater_fishing.json"
        }
      },
      "loot_arid": {
        "minecraft:loot": {
          "table": "loot_tables/gameplay/arid_fishing.json"
        }
      },
      "loot_arctic": {
        "minecraft:loot": {
          "table": "loot_tables/gameplay/arctic_fishing.json"
        }
      },
      "loot_brackish": {
        "minecraft:loot": {
          "table": "loot_tables/gameplay/brackish_fishing.json"
        }
      },
      "loot_mooshroom": {
        "minecraft:loot": {
          "table": "loot_tables/gameplay/fishing/mooshroom_fish.json"
        }
      }
    },
    "components": {
      "minecraft:collision_box": {
        "width": 0.15,
        "height": 0.15
      },
      "minecraft:projectile": {
        "on_hit": {
          "stick_in_ground": {}
        }
      },
      "minecraft:loot": {
        "table": "loot_tables/gameplay/fishing.json"
      },
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "filters": {
              "test": "has_biome_tag",
              "value": "jungle"
            },
            "add": {
              "component_groups": ["loot_jungle"]
            }
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "has_biome_tag",
                  "value": "ocean"
                },
                {
                  "test": "has_biome_tag",
                  "operator": "not",
                  "value": "cold"
                }
              ]
            },
            "add": {
              "component_groups": ["loot_saltwater"]
            }
          },
          {
            "filters": {
              "any_of": [
                {
                  "test": "has_biome_tag",
                  "value": "desert"
                },
                {
                  "test": "has_biome_tag",
                  "value": "savanna"
                },
                {
                  "test": "has_biome_tag",
                  "value": "mesa"
                }
              ]
            },
            "add": {
              "component_groups": ["loot_arid"]
            }
          },
          {
            "filters": {
              "all_of": [
                {
                  "test": "has_biome_tag",
                  "value": "ocean"
                },
                {
                  "test": "has_biome_tag",
                  "value": "cold"
                }
              ]
            },
            "add": {
              "component_groups": ["loot_arctic"]
            }
          },
          {
            "filters": {
              "test": "has_biome_tag",
              "value": "swamp"
            },
            "add": {
              "component_groups": ["loot_brackish"]
            }
          },
          {
            "filters": {
              "test": "has_biome_tag",
              "value": "mooshroom_island"
            },
            "add": {
              "component_groups": ["loot_mooshroom"]
            }
          }
        ]
      }
    }
  }
}
